        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project"
        mc:Ignorable="d"
        Title="TextEditWindow" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="218" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="263"/>
        <Button x:Name="button" Content="update" HorizontalAlignment="Left" Margin="180,233,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
