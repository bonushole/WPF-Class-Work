<Window x:Class="BetterATM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterATM"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="label" Content="Username" HorizontalAlignment="Left" Margin="125,102,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Password" HorizontalAlignment="Left" Margin="125,152,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="userNameBox" HorizontalAlignment="Left" Height="23" Margin="193,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="193,152,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="213,236,0,0" Click="loginButton_Click"/>
        <Label x:Name="alertLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="125,61,0,0"/>

    </Grid>
</Window>
