<Window x:Class="BetterATM.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterATM"
        mc:Ignorable="d"
        Title="AccountWindow" Height="300" Width="300">
    <Grid>
      <StackPanel>
        <Button x:Name="balanceButton" Content="Balance" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="balanceButton_Click"/>
        <Button x:Name="withdrawButton" Content="Withdraw" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" Click="withdrawButton_Click"/>
        <Button x:Name="depositButton" Content="Deposit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click ="depositButton_Click"/>
        <Button x:Name="logoutButton" Content="Logout" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click ="logoutButton_Click"/>
      </StackPanel>
    </Grid>
</Window>
