<Window x:Class="BetterATM.DepositWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterATM"
        mc:Ignorable="d"
        Title="DepositWindow" Height="300" Width="300">
    <Grid>
      
        <Label x:Name="balanceLabel" />
        <TextBox x:Name="depositBox" HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="81,67,0,0" />
        
        <Button x:Name="depositButton" Content="Deposit" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" Click="depositButton_Click" Margin="104,125,0,0"/>
        
        <Button x:Name="returnButton" Content="Return" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click ="returnButton_Click" Margin="104,166,0,0"/>
     
    </Grid>
</Window>
