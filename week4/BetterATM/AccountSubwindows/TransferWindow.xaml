<Window x:Class="BetterATM.TransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterATM"
        mc:Ignorable="d"
        Title="TransferWindow" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="accountNameBox" HorizontalAlignment="Left" Height="23" Margin="146,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="amountBox" HorizontalAlignment="Left" Height="23" Margin="146,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Account Name:" HorizontalAlignment="Left" Margin="18,74,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Amount to Transfer:" HorizontalAlignment="Left" Margin="18,117,0,0" VerticalAlignment="Top"/>
        <Button x:Name="transferButton" Content="Transfer" HorizontalAlignment="Left" Margin="98,180,0,0" VerticalAlignment="Top" Width="75" Click="transferButton_Click"/>
        <Button x:Name="returnButton" Content="Return" HorizontalAlignment="Left" Margin="98,220,0,0" VerticalAlignment="Top" Width="75" Click="returnButton_Click"/>

    </Grid>
</Window>
