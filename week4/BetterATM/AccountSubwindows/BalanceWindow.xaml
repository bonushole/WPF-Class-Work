<Window x:Class="BetterATM.BalanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterATM"
        mc:Ignorable="d"
        Title="BalanceWindow" Height="300" Width="300">
    <Grid>
      
        <Label x:Name="balanceLabel" Content="balance" Margin="112,20,-112,-20"/>
        <Button x:Name="withdrawButton" Content="Withdraw" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="75" Click="withdrawButton_Click" Margin="112,72,0,0"/>
        <Button x:Name="depositButton" Content="Deposit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click ="depositButton_Click" Margin="112,117,0,0"/>
        <Button x:Name="returnButton" Content="Return" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click ="returnButton_Click" Margin="112,165,0,0"/>
      
    </Grid>
</Window>
