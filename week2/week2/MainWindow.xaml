<Window x:Class="week2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:week2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="399*"/>
            <ColumnDefinition Width="118*"/>
        </Grid.ColumnDefinitions>

        <Label Content="This is a label" Width=" 100" Margin="196,134,103,144"/>
        <!-- Added with Toolbox -->
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="228,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="textBox_TextChanged"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="228,96,0,0" VerticalAlignment="Top" Width="80"/>
        <CheckBox x:Name="checkBox" Content="don't click" HorizontalAlignment="Left" Margin="290,50,0,0" VerticalAlignment="Top" Checked="checkBox_Checked" Unchecked=" checkBox_Checked" Height="21" Width="102"/>
        <Button x:Name="button" Content="button" HorizontalAlignment="Left" Margin="392,190,0,0" VerticalAlignment="Top" Width="75" Grid.ColumnSpan="2" Click="button_Click"/>

    </Grid>
</Window>
